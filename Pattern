 for(int i=0;i<n;i++){
     for(int j=0;j<n-(i+1);j++){
            cout<<"  ";
        }
         char ch ='A';
        for(int j=1;j<=2*i+1;j++){
             cout<<ch<<" ";
            if(j<= (2*i+1)/2) ch++;
            else  ch--;
        }
         for(int j=0;j<n-(i+1);j++){
            cout<<"  ";
        }
        cout<<endl;
    }

 for(int i=0;i<n;i++){
        for(int j=0;j<n;j++){
            if(j<=i)cout<<j+1<<" ";
            else cout<<"  ";
            
        }
        for(int j=n;j<2*n;j++){
            if(j<=2*n-(i+2)) cout<<"  ";
            else cout<<2*n-j<<" ";
            
        }
        cout<<endl;
    }

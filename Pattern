for (int i = 0; i < n; i++) {
     for (int j = 0; j < n-1-i; j++) {
          cout<<" ";
      }
      for (int j = n-i-1; j < n; j++) {
          cout<<"*";
      }
      for (int j = n-i; j < n; j++) {
          cout<<"*";
      }
      cout<<endl;
    }


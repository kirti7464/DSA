int flag=false;
    for(int i=0;i<n;i++){
        for(int j=0;j<=i;j++) {
            flag=!flag;
            if(flag) cout<<"1 ";
            else cout<<"0 ";
        }
        if(i%2!=0) flag=!flag;
        cout<<endl;
    }
